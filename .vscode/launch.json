    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'pixel-contrib-cli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=pixel-contrib-cli",
                    "--package=pixel-contrib-cli"
                ],
                "filter": {
                    "name": "pixel-contrib-cli",
                    "kind": "bin"
                }
            },
            "args": [
                "-i",
                "${workspaceFolder}/test_data/models/sphere.off",
                "-p",
                "32"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}